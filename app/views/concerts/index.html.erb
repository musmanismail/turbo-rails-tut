<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-bold underline">Concerts</h1>

<div class="flex flex-col justify-center items-center">
  <div>
    <table class="table-auto border-2 border-amber-500">
      <thead>
      <tr>
        <th>Event Name</th>
        <th>Time</th>
        <th>Repeat</th>
      </tr>
      </thead>
      <tbody>
          <% @concerts.each do |concert| %>
            <%= render concert %>
          <% end %>
      </tbody>
    </table>
  </div>
  <div>
    <%= link_to "New concert", new_concert_path, class: "" %>
  </div>
</div>
